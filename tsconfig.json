{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "dist",
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "types": ["node", "vite/client", "webdriverio", "@wdio/mocha-framework"],
        "useDefineForClassFields": true
    },
    "exclude": ["node_modules"],
    "include": ["test/**/*.ts"]
}
